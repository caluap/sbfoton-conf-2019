include /_mixins

mixin hotel(nome, end1, end2, link, tel, dist, email = '')
  .hotel
    h3 #{nome}
    p.
      #{end1}, #[br] #{end2}
      #[br] #[small.pequeno #{dist} km from venue]
    p
      | #[a(href="#{link}") Website]
      | #[br] #[a(href="tel:#{tel}") #{tel}]
      unless email == ''
        | #[br] #[a(href="mailto:#{email}") #{email}]
        
+menu('Venue')

