include /_mixins

+menu('Plenaries')


//- .conteudo

.slide.s-default.s-var-4.pad
  .pure-g
    .pure-u-1
      h1 Plenaries

      .c-trabalhos
        - var i = 1;
        each data, i_data in plenaries 
          .trab-dia
            p.trab-data= i_data
            each plenaria in data
              .trabalho
                - var trabalho = trabalhos[plenaria.trabalho]
                .trab-trab
                  p.trab-ind= i
                  p.trab-titulo= trabalho.titulo
                  p.trab-horario #{plenaria.horario}&nbsp; / &nbsp;#{salas[plenaria.sala].nome}
                  //- p.trab-sala= salas[plenaria.sala].nome
                  p.trab-resumo= trabalho.resumo
                  ul.trab-temas
                    each tema in trabalho.temas
                      li= tema
                .trab-autores
                  h3 Presented by
                  each nome_autor in trabalho.autores
                    .trab-autor
                      - var autor = autores[nome_autor]
                      unless autor.imagem == ""
                        img.trab-a-img(src="#{autor.imagem}")
                      p.trab-a-nome= autor.nome
                      p.trab-a-inst #[a(href="#{autor.instituicao.url}", target="_blank") #{autor.instituicao.nome}]
                      p.trab-a-bio= autor.biografia
                  - i++;


+rodape('Plenaries')